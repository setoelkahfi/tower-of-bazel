<% content_for :meta_head do %>
  <title><%= @meta_title %></title>
  <meta name="description" content="<%= @meta_description %>">
  <meta property="og:title" content="<%= @meta_title %>" />
  <meta property="og:description" content="<%= @meta_description %>" />
  <meta property="og:url" content="<%= @meta_url %>" />
<% end %>
<% content_for :breadcrumb do %>
  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "item": {
          "@id": "<%= root_url %>",
          "name": "<%= t("site_name") %>"
        }
      },{
        "@type": "ListItem",
        "position": 2,
        "item": {
          "@id": "<%= artist_url %>",
          "name": "<%= t("nav_artists") %>"
        }
      },{
        "@type": "ListItem",
        "position": 3,
        "item": {
          "@id": "<%= request.base_url %>/artis/<%= @song.album.artists[0].name.downcase.parameterize %>-<%= @song.album.artists[0].id %>",
          "name": "<%= @song.album.artists[0].name %>"
        }
      },{
        "@type": "ListItem",
        "position": 4,
        "item": {
          "@id": "<%= request.base_url %>/album/<%= @song.album.name.downcase.parameterize + '-' + @song.album.artists[0].name.downcase.parameterize %>-<%= @song.album.id %>",
          "name": "<%= @song.album.name %>"
        }
      },{
        "@type": "ListItem",
        "position": 5,
        "item": {
          "@id": "<%= request.url %>",
          "name": "<%= @song.name %>"
        }
      }]
    }
  </script>
<% end %>
<main>
  <div class="row g-5">
    <div class="col-md-12">
      <h1><%= @page_title %></h1>
    </div>
  </div>
  <div class="row g-5">
    <div class="col-sm-1">
      <div class="position-sticky" style="top: 1rem;">
        <div class="text-center mt-3">
          <% if user_signed_in? && @song.users.include?(current_user) %>
            <%= link_to(
                    '<i class="bi bi-heart-fill"></i>'.html_safe,
                    song_chord_pleas_unloved_path(id: @song.id),
                    remote: true,
                    method: :delete,
                    :id => "ajax_trigger"
                )
            %>
          <% else %>
            <%= link_to(
                      '<i class="bi bi-heart"></i>'.html_safe,
                      song_chord_pleas_loved_path(id: @song.id),
                      remote: true,
                      method: :post,
                      :id => "ajax_trigger"
                  )
              %>
          <% end %>
          <span class="badge rounded-pill bg-warning text-dark"><%= @song.users.count %></span>
        </div>
        <div class="text-center mt-4">
          <i class="bi bi-graph-up-arrow"></i>
          <span class="badge rounded-pill bg-warning text-dark"><%= @song.views_count %></span>
        </div>
      </div>
    </div>
    <div class="col-sm-9">
      <%= render('shared/partial_meta_top', author: @author, created_at: @song.created_at) %>
      <%= @song.description.html_safe %>
      <%= render('partial_meta_bottom', artist: @song.artists, album: @song.album) %>
      <div class="row mt-3">
        <h3 id="discussion"><%= t('discussion') %></h3>
        <%= render "shared/flash_message", object: flash %>
        <div class="mb-3">
          <%= form_for [@song, Comment.new] do |f| %>
            <%= f.text_area :body, placeholder: t('discussion_comment_placeholder'), rows: "4" , cols: "50%" %><br/>
            <%= f.hidden_field :user_id, value: current_user.id if user_signed_in? %>
            <%= f.submit t('discussion_comment_button'), class: "btn btn-primary" %>
          <% end %>
        </div>
        <%= render(partial: 'comments/comment', collection: @song.comments) %>
      </div>
    </div>
    <div class="col-sm-2">
      <%= render('partial_menus_aside', active_menu: 'info') %>
    </div>
  </div>
  <%= render "shared/partial_breadcrumbs" do %>
    <li class="breadcrumb-item"><%= link_to t("nav_artists"), artist_url %></li>
    <li class="breadcrumb-item"><%= link_to @song.album.artists[0].name, artist_detail_url(@song.album.artists[0].name.downcase.parameterize + "-" + @song.album.artists[0].id.to_s) %></li>
    <li class="breadcrumb-item"><%= link_to @song.album.name, album_detail_url(@song.album.name.downcase.parameterize + '-' + @song.album.artists[0].name.downcase.parameterize + "-" + @song.album.id.to_s) %></li>
    <li class="breadcrumb-item"><%= link_to @song.name, song_detail_path(@song.slug) %></li>
  <% end %>
</main>
