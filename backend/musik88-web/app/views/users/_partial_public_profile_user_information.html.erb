<div class="row">
  <div class="col-md-2 text-center">
    <%= gravatar_for @user %>
    <div class="mb-3 mt-3">
      <i class="bi bi-graph-up-arrow"></i>&nbsp;
      <span class="badge bg-warning rounded-pill text-dark">
        <%= @user.followers.count %>
      </span>
      <%= t('followers').downcase %>
    </div>
    <div class="mb-3 mt-3">
      <i class="bi bi-graph-up-arrow"></i>&nbsp;
      <span class="badge bg-warning rounded-pill text-dark">
        <%= @user.following.count %>
      </span>
      <%= t('following').downcase %>
    </div>
    <% if user_signed_in? && current_user.id != @user.id %>
      <div id="follow_form">
        <% if current_user.following?(@user) %>
          <%= render 'unfollow' %>
        <% else %>
          <%= render 'follow' %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <h1 class="d-inline-flex">
      <%= @user.name %>
    </h1>
    <%= "<span class='fst-italic fw-lighter'>It's me!</span>".html_safe if user_signed_in? && @user.id == current_user.id  %>
    <ul class="list-group">
      <li class="list-group-item d-flex align-items-center">
        <i class="bi bi-music-note-beamed"></i>&nbsp;
        <%= link_to(
                        @username_string.html_safe,
                        profile_path(@user.username_or_id)
                    ) %>
      </li>
      <li class="list-group-item d-flex align-items-center">
        <i class="bi bi-link"></i>&nbsp;
        <%= link_to(
                        "@#{@user.username_or_id}",
                        @user.splitfire_profile_link,
                        target: :_blank
                    )
                    %>
      </li>
      <% if @user.instagram.present? %>
        <li class="list-group-item d-flex align-items-center">
          <i class="bi bi-instagram"></i>&nbsp;
          <%= "#{link_to(@user.instagram, "https://instagr.am/#{@user.instagram}", target: :_blank)}".html_safe %>
        </li>
      <% end %>
      <% if @user.youtube_channel_id.present? %>
        <li class="list-group-item d-flex align-items-center">
          <i class="bi bi-youtube"></i>&nbsp;
          <%= "#{link_to(@user.name, "https://www.youtube.com/channel/#{@user.youtube_channel_id}", target: :_blank)}".html_safe %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-6">
    <h2 class="display-6">About</h2>
    <%= @user.about.present? ? @user.about : 'Emptiness...' %>
  </div>
</div>
