<% content_for :meta_head do %>
  <title>
    <%= @meta_title %>
  </title>
  <meta name="description" content="<%= @meta_description %>">
<% end %>
<div class="row">
  <!-- BEGIN content -->
  <div class="col-md-12">
    <div class="page-header">
      <h1>
        <%= t("gending_notation_add") %>
      </h1>
    </div>
  </div>
  <div class="col-md-8">
    <%= form_with model: @javanese_gending, url: { action: "add" }, html: { :class=> "form-horizontal" } do |form| %>
      <div class="form-group">
        <%= form.label t("gending_name"), class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= form.text_field :name, class: "col-md-6 form-control tinymce" %>
        </div>
        <%= form.label t("gending_description"), class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= form.text_area :description, class: "col-md-6 form-control tinymce" , :rows=> 10, :cols => 120 %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-4">
          <%= form.submit t("gending_notation_add"), class: "btn btn-primary" %>
        </br>
      </br>
      <div class="vertical-separator"></div>
      <%= link_to t("cancel"), javanese_gending_path, class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>
<%= tinymce %>
</div>
<!-- END content -->
</div>
<%= render "shared/partial_breadcrumbs" do %>
<% end %>
