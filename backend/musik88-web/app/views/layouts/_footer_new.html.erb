            <div class="col-auto">
              <i class="bi bi-globe"></i>
            </div>
            <div class="col-auto">
              <select id="select-locale" class="form-select" aria-label="Locale" onchange="changeLocale()">
                    <% I18n.available_locales.each do |locale| %>
                      <% if %i[ja id-id sv-se en].include? locale %>
                        <option <%= 'selected' if I18n.locale == locale %> value="<%= current_domain_locale_url(locale, request.query_parameters) %>"><%= t('locale_name', locale: locale) %></option>
                      <% end %>
                    <% end %>
              </select>
              <script>
                function changeLocale() {url = document.getElementById("select-locale").value;window.location = url;}
              </script>
            </div>
          </div>
        <% end %>
