<% content_for :meta_head do %>
  <title><%= @meta_title %></title>
  <meta name="description" content="<%= @meta_description %>">
  <meta property="og:title" content="<%= @meta_title %>" />
  <meta property="og:description" content="<%= @meta_description %>" />
  <meta property="og:url" content="<%= @meta_url %>" />
<% end %>
<% content_for :breadcrumb do %>
  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "item": {
          "@id": "<%= request.base_url %>",
          "name": "Musik 88"
        }
      },{
        "@type": "ListItem",
        "position": 2,
        "item": {
          "@id": "<%= artist_url %>",
          "name": "<%= t("nav_artists") %>"
        }
      },{
        "@type": "ListItem",
        "position": 3,
        "item": {
          "@id": "<%= artist_detail_url %>",
          "name": "<%= @artist.name %>"
        }
      }]
    }
  </script>
<% end %>
<main>
  <div class="row g-5">
    <div class="col-md-12 text-center">
      <h1><%= @page_title %></h1>
      <%= render('shared/flash_message', object: flash) %>
    </div>
  </div>
  <div class="row g-5">
    <div class="col-12">
        <div class="text-center mt-4 mb-4">
            <%= image_pack_tag(
                "image-placeholder-#{rand(0...3)}.jpg",
                alt:"#{@artist.name} image",
                class: "img-thumbnail rounded-circle"
            ) %>
        </div>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col-md-12 text-center mb-3">
      <%= link_to(
        "<i class='bi bi-#{@artist.provider_type.to_s}' style='font-size: 3rem; color: blue;'></i>".html_safe,
        @artist.provider_url,
        style: 'padding: 0px',
        target: '__blank'
      ) %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-12 text-center">
      This is the bridge page of this artist. 
    </div>
  </div>
  <%= render 'shared/partial_breadcrumbs' do %>
    <li class="breadcrumb-item">
      <%= link_to(
                t("nav_artists"),
                artist_path
       ) %>
    </li>
    <li class="breadcrumb-item">
      <%= link_to(
        @artist.name,
        artist_detail_path(artist_friendly_url(@artist))
       ) %>
    </li>
  <% end %>
</main>
