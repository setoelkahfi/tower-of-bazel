<% content_for :meta_head do %>
  <title><%= @meta_title %></title>
  <meta name="description" content="<%= @meta_description %>">
  <meta property="og:title" content="<%= @meta_title %>" />
  <meta property="og:description" content="<%= @meta_description %>" />
  <meta property="og:url" content="<%= guitar_chords_url %>" />
<% end %>
<% content_for :breadcrumb do %>
  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "item": {
          "@id": "<%= root_url %>",
          "name": "<%= t("site_name") %>"
        }
      },{
        "@type": "ListItem",
        "position": 2,
        "item": {
          "@id": "<%= guitar_chords_url %>",
          "name": "<%= t("nav_chords") %>"
        }
      }]
    }
  </script>
<% end %>
<div class="row">
  <!-- BEGIN content -->
  <div class="col-md-8">
    <div class="bluebox-heading">
      <h1><%= @page.title if @page %></h1>
    </div>
    <% @chords.each_with_index do |chord, index| %>
      <% if (index == 0 || index % 2 == 0) %>
        <div class="row content-row mb-3">
        <% end %>
        <div class="col-md-6">
          <section class="featured-post">
            <a class="itext-center" href="<%= guitar_chord_detail_path(chord.slug) %>">
              <%= image_pack_tag("image-placeholder-#{rand(0...3)}.jpg", alt:"#{t('guitar_chord')} #{chord.link_title}", class:"img-thumbnail rounded mx-auto d-block") %>
              <span class="image-details"></span>
            </a>
            <h2>
              <%= link_to t('guitar_chord_link', slug: chord.link_title),
                          guitar_chord_detail_path(chord.slug) %>
            </h2>
            <div class="bluebox-info-line">
              <span class="fst-italic fw-light">
                <%= chord.updated_at.strftime("%B %-d, %Y") %>
              </span>
              <%= link_to(
                t("see_chord_detail"),
                guitar_chord_detail_path(chord.slug),
                class: 'badge rounded-pill bg-warning float-end'
              ) %>
            </div>
          </section>
        </div>
        <% if (index == @chords.size - 1 || (index != 0 && index % 2 != 0)) %>
        </div>
      <% end %>
    <% end %>
    <%= will_paginate @chords %>
  </div>
  <div class="col-md-4">
    <aside>
      <div class="bluebox-heading">
        <h2><%= t("top_10_guitar_chords")%></h2>
      </div>
      <div class="events-list widget-wrap">
        <% @trending_chords.each_with_index do |chord, index| %>
          <section class="mt-5">
            <div class="details">
              <h4>
                <%= link_to(
                    "#{index + 1}. #{t('guitar_chord_link', slug: chord.link_title)}",
                    guitar_chord_detail_path(chord.slug)
                ) %>
              </h4>
              <%= link_to t("see_chord_detail"),
                  guitar_chord_detail_path(chord.slug),
                        class: "badge rounded-pill bg-warning" %>
              <span class="fst-italic fw-light float-end">
                <%= chord.updated_at.strftime("%B %-d, %Y") %>
              </span>
            </div>
          </section>
        <% end %>
      </div>
    </aside>
  </div>
</div>
<%= render "shared/partial_breadcrumbs" do %>
  <li class="breadcrumb-item"><%= link_to t("nav_chords"), guitar_chords_path %></li>
<% end %>
